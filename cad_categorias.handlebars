<div class="container-fluid mt-5">
    <form action="/routes/cad_categ/cadastrado" method="POST">
        <div class="mt-3 mb-3">
            <input type="text" id="nome" name="nome_cat" placeholder="nome da categoria" class="form-control">
        </div>
        <div class="mt-3 mb-3">
            <input type="text" id="slug" name="slug_cat" placeholder="nome da categoria" class="form-control">
        </div>
        <div class="mt-3 mb-3">
        {{#each erros}}
            <div class="alert-danger">{{texto}}</div>
        {{else}}
        {{/each}}
        </div>
        <button type="submit" class="btn btn-success">Salvar</button>
    </form>
</div>